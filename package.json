{
  "name": "retailapp",
  "version": "1.0.0",
  "description": "InfoPlus retail management application built with Electron",
  "author": "Willie Estrada",
  "license": "ISC",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon BackEnd/mainApp.js",
    "dist": "electron-builder --win nsis",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "mssql": "^11.0.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.1.10"
  },
 "build": {
  "appId": "com.willie.retailapp",
  "productName": "RetailApp",
  "directories": {
    "output": "dist"
  },
  "asar": true,
  "files": [
    "**/*",
    "!graphics{,/**}",
    "!.env",
    "!node_modules/.cache"
  ],
  "extraFiles": [
    { "from": ".env", "to": ".env" },
    { "from": "graphics", "to": "graphics", "filter": ["**/*"] }
  ],
  "win": {
    "target": "nsis",
    "icon": "favicon.ico",
    "sign": false
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "installerIcon": "favicon.ico",
    "uninstallerIcon": "favicon.ico",
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "RetailApp"
  },
  "mac": {
    "target": []
  },
  "linux": {
    "target": []
  }
},
  "keywords": []
}
